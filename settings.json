{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      // Core File Operations
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "List",

      // Version Control
      "Bash(git:*)",         // Git operations
      
      // Basic File System Commands
      "Bash(ls:*)",          // List directory contents
      "Bash(cat:*)",         // Display file contents
      "Bash(pwd:*)",         // Print working directory
      "Bash(cd:*)",          // Change directory
      
      // Search and Discovery
      "Bash(find:*)",        // Find files/directories
      "Bash(grep:*)",        // Search text patterns
      "Bash(rg:*)",          // Ripgrep - fast search alternative
      
      // Development Tools
      "Bash(npm:*)",         // Node package manager
      "Bash(npx:*)",         // Execute npm packages
      "Bash(node:*)",        // Node.js runtime
      "Bash(python:*)",      // Python interpreter
      "Bash(make:*)",        // Build automation
      
      // Data Processing & Network
      "Bash(jq:*)",          // JSON processor
      "Bash(curl:*)",        // Transfer data from/to servers
      "Bash(echo:*)",        // Display text/variables
      
      // Deployment & CI/CD
      "Bash(vercel:*)",      // Vercel deployment platform
      "Bash(gh:*)"           // GitHub CLI for PRs, issues, etc.
    ],
    
    "deny": [
      // Destructive Operations
      "Bash(rm -rf *)",      // Prevent recursive force deletion
      
      // Network Operations (duplicated/restricted)
      "Bash(curl *)",        // Restrict general curl usage
      "Bash(wget *)",        // Prevent file downloads
      "Bash(ssh *)",         // No SSH connections
      "Bash(scp *)",         // No secure copy operations
      
      // Environment Variables & Secrets
      "Read(*.env*)",        // Protect .env files
      "Edit(*.env*)",
      "Write(*.env*)",
      "Read(.env.*)",        // Protect .env.* variants
      "Edit(.env.*)",
      "Write(.env.*)",
      
      // Sensitive Keywords
      "Read(*secret*)",      // Files containing 'secret'
      "Edit(*secret*)",
      "Write(*secret*)",
      "Read(*password*)",    // Files containing 'password'
      "Edit(*password*)",
      "Write(*password*)",
      
      // Cryptographic Materials
      "Read(*.key)",         // Private key files
      "Edit(*.key)",
      "Write(*.key)",
      "Read(*.pem)",         // PEM certificate files
      "Edit(*.pem)",
      "Write(*.pem)",
      "Read(*.p12)",         // PKCS#12 certificate files
      "Edit(*.p12)",
      "Write(*.p12)",
      "Read(*.pfx)",         // Personal exchange format
      "Edit(*.pfx)",
      "Write(*.pfx)",
      
      // Private Directories
      "Read(.ssh/*)",        // SSH configuration & keys
      "Edit(.ssh/*)",
      "Write(.ssh/*)"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tdd-workflow-enforcer.sh"
          }
        ]
      }
    ]
  }
}